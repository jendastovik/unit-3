#:kivy 1.0.9
#:import MDFlatButton kivymd.uix.button.MDFlatButton
<TopButton@Button>:
    font_size: 32
    background_color: 0.2, 0.2, 0.2, 1  # dark grey

<OperationButton@Button>:
    font_size: 32
    background_color: 1, 0.5, 0, 1  # orange

<NumberButton@Button>:
    font_size: 32
    background_color: 0.8, 0.8, 0.8, 1  # light grey

Screen:
    MDLabel:
        id: label
        size_hint: 1, .166
        halign: "right"
        text: ""
        pos_hint: {"top": 1}
        font_size: "20sp"  
        color: 1, 1, 1, 1  # white
        md_bg_color: 0.15, 0.15, 0.15, 1  # grey

    BoxLayout:
        size_hint: 1, .666
        pos_hint: {"top": 0.833}
        GridLayout:
            cols: 4
            rows: 4
            TopButton:
                text: "AC"
                on_release: app.clear()
            TopButton:
                text: "+/-"
                on_release: app.toggle_sign()
            TopButton:
                text: "%"
                on_release: app.calculate_percentage()
            OperationButton:
                text: "/"
                on_release: app.operation_pressed("/")
            NumberButton:
                text: "1"
                on_release: app.number_pressed(1)
            NumberButton:
                text: "2"
                on_release: app.number_pressed(2)
            NumberButton:
                text: "3"
                on_release: app.number_pressed(3)
            OperationButton:
                text: "+"
                on_release: app.operation_pressed("+")
            NumberButton:
                text: "4"
                on_release: app.number_pressed(4)
            NumberButton:
                text: "5"
                on_release: app.number_pressed(5)
            NumberButton:
                text: "6"
                on_release: app.number_pressed(6)
            OperationButton:
                text: "-"
                on_release: app.operation_pressed("-")
            NumberButton:
                text: "7"
                on_release: app.number_pressed(7)
            NumberButton:
                text: "8"
                on_release: app.number_pressed(8)
            NumberButton:
                text: "9"
                on_release: app.number_pressed(9)
            OperationButton:
                text: "*"
                on_release: app.operation_pressed("*")
    BoxLayout:
        size_hint: 1, .166
        NumberButton:
            text: "0"
            on_release: app.number_pressed(0)
            size_hint: 0.5, 1
        NumberButton:
            text: "."
            on_release: app.decimal_pressed()
            size_hint: 0.25, 1
        OperationButton:
            text: "="
            on_release: app.evaluate()
            size_hint: 0.25, 1
