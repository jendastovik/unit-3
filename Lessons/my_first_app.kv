#:kivy 1.0.9

Screen:
    size: 500, 500

    MDLabel:
        text: "Hello, World!"
        font_size: 50
        halign: "center"
        id: my_label


    MDRaisedButton:
        id: my_button
        text: "PRESS ME"
        size_hint: .5, .1
        color: "white"
        md_bg_color: "black"
        pos_hint: {"center_x": .5, "center_y": .3}
        on_press: app.pressed()