#:kivy 1.0.9

Screen:
    size: 500, 500

    MDBoxLayout:
        md_bg_color: "white"
        id: screen
        size_hint: 1, 1
        orientation: "vertical"

        MDLabel:
            text: "Jenda's App"
            font_size: 50
            halign: "center"
            id: my_label


        MDRaisedButton:
            id: my_button
            text: "Dark Mode"
            size_hint: .5, .1
            color: "white"
            md_bg_color: "blue"
            pos_hint: {"center_x": 0, "center_y": .1}
            on_press: app.pressed()