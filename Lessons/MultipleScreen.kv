#:kivy 1.0.9

ScreenManager:
    FirstScreen: 
        name:"first"
    SecondScreen: 
        name:"second"

<firstScreen>:
    MDLabel:
        text: 'First Screen'
        font_style: 'H2'
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        halign: 'center'
    MDFlatButton:
        text: 'Go to second screen'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        on_release: root.try_change()

<secondScreen>:
    MDLabel:
        text: 'Second Screen'
        font_style: 'H2'
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        halign: 'center'
    MDFlatButton:
        text: 'Go to first screen'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        on_release: root.parent.current = 'first'
